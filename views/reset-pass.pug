extends layout.pug

block content
    form.formWrapper#resetPassForm
        h2 Reset password
        span.errorMessage#resetPassError

        input#token.inputBox(
            type="hidden"
            name="token"
            value="" + token + ""
        )

        br

        label(for="password") Password:
        input#password.inputBox(
            required
            type="password"
            name="password")
        span.errorMessage#passError
        br

        label(for="confirm") Confirm:
        input#confirm.inputBox(
            required
            type="password"
            name="confirm")
        span.errorMessage#confirmError
        br
        input.inputButton#resetPass(type="submit" value="Reset Password")